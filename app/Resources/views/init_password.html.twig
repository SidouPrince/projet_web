{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/partenaire.css') }}">
{% endblock %}
{% block body %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<a class="navbar-brand" href="#">Mon site</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item active">
					<a  class="nav-link" href="{{ path('devenirPartenaire') }}">Devenir partenaire</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/">A propos de nous</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Connexion</a>
				</li>
				<li class="nav-item">
				</ul>
				<form class="form-inline my-2 my-lg-0">
					<input class="form-control mr-sm-2" type="text" placeholder="Search">
					<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
				</form>
			</div>
		</nav>
		<div class="register-form container">
			<div class="row">
				<div class="col-sm-3"></div>
				<div class="col-sm-6">
					{# une div cachée pour afficher l'alerte si le mot de passe est bon #}
					<div class="alert alert-dismissible alert-success" id="confirmation">
						<input type="hidden" value="{{inscriptionTerminee}}" id="inscriptionTerminee">
						<strong>Bravoo !</strong> <p>Vous pouvez maintenant acceder à votre compte en 
						cliquant <a href="#">ICI</a>
						</p>
					</div>
					<form method="post" action="">
						<legend><p class="text-muted" style="text-align: center;">Initialisation mot de passe</p></legend>
						<div class="form-group pass">
							<label for="Password">Mot de passe</label>
							<input type="password" name="password" class="form-control" id="password" placeholder="mot de passe">
						</div>
						<div class="form-group">
							<label for="Password">Confirmation mot de passe</label>
							<input type="password" name="cpassword" class="form-control" id="cpassword" placeholder="confirmation mot de passe">
						</div>
						<input type="submit" class="btn btn-outline-primary" id="btn_password" value="Enrigestrer"></input>
					</form>
				</div>
			</div>
		</div>
		{##############################################}
	{% endblock %}
	{% block javascripts %}
		<script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/init-password.js') }}"></script>
	{% endblock %}