{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/partenaire-etablissement.css') }}">
{% endblock %}
{% block body %}
	
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<a class="navbar-brand" href="#">Mon site</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item active">
					<a  class="nav-link" href="{{ path('devenirPartenaire') }}">Devenir partenaire</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/">A propos de nous</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Connexion</a>
				</li>
				<li class="nav-item">
				</ul>
				<form class="form-inline my-2 my-lg-0">
					<input class="form-control mr-sm-2" type="text" placeholder="Search">
					<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
				</form>
			</div>
		</nav>
		<div class="register-form container">
			<div class="row">
				<div class="col-sm-6">
					{{ form_start(formEtablissement) }}
					<legend><p class="text-muted">A propos de votre établissement</p></legend>

					{# une div cachée pour afficher l'alerte si l'etablissement existe déja #}
					<div class="alert alert-dismissible alert-danger" id="etablissementExiste">
						<input type="hidden" value="{{ etablissementExiste }}" id="etablExiste">
						<strong>Oh mince !</strong> Ce nom d'établissemnt existe déja !
					</div>
					
					<div class="form-group">
						{{ form_row(formEtablissement.nomSociete, {'attr': {'placeholder': "Le nom de votre societe", 'class': "form-control"}}
						) }}
					</div>
					<div class="form-group">
						{{ form_row(formEtablissement.typeActivite, {'attr': {'placeholder': "Le type de votre societe", 'class': "form-control"}}
						) }}
					</div>
					<div class="form-group">
						{{ form_row(formEtablissement.nomSociete, {'attr': {'placeholder': "0", 'class': "form-control"}}
						) }}
					</div>
					<div class="form-group">
						{{ form_row(formEtablissement.employes, {'attr': {'placeholder': "0", 'class': "form-control"}}
						) }}
					</div>
					<div class="form-group">
						{{ form_row(formEtablissement.rue, {'attr': {'placeholder': "ex: 2 allee des spoutniks", 'class': "form-control"}}
						) }}
					</div>
					<div class="form-group">
						{{ form_row(formEtablissement.codePostale, {'attr': {'placeholder': "ex: 93700", 'class': "form-control"}}
						) }}
					</div>
					<div class="form-group">
						{{ form_row(formEtablissement.ville, {'attr': {'placeholder': "Votre ville", 'class': "form-control"}}
						) }}
					</div>
					<button type="submit" class="btn btn-outline-primary" id="btn_etablissement">Enrigestrer</button>
					{{ form_end( formEtablissement ) }}
				</div>
			</div>
		</div>
		
	{% endblock %}
	{% block javascripts %}
		<script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/partenaire-etablissement.js') }}"></script>
	{% endblock %}