{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link rel="stylesheet" href={{asset('css/etablissement.css')}}>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href={{asset('css/bootstrap.min.css')}}>
{% endblock %}
{% block body %}
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Beaute</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="">etablissement <span class="sr-only">(current)</span></a>
        </li>
        
        <li class="nav-item ">
          <a class="nav-link" href="{{ path('acceuil') }}">Acceuil <span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('deconnexion') }}">Déconnecxion</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div style="border: solid red 2px; width: 100%; height: 300px; margin-top: 20px;">
      </div>
    </div>
  </div>
  {# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #}
  <div class="container" style="margin-top: 10px;">
    <div class="row">
      <div class="col-sm-4">
        <p class="lead">{{ infos.nomSociete }}</p>
        <p class="text-muted"> {{infos.ville}} </p>
        <p class="text-muted">{{infos.rue}}</p>
      </div>
      <div class="col-sm-4">
      </div>
      <div class="col-sm-4">
        <ul class="list-inline">
          <li class="list-inline-item"><button type="button" class="btn btn-outline-primary">Prendre Rendez-vous</button></li>
        </ul>
      </div>
    </div>
  </div>
  {# #{~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~} #}
  <div class="container">
    <div class="row">
      <div class="col-sm-6" style=" margin-top: 10px;">
        <p class="lead">Sérvices proposés</p>
      </div>
      <div class="col-sm-6">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Sérvice </th>
              <th scope="col">Prix </th>
            </tr>
          </thead>
          <tbody>
            <tr class="table-active">
              <td>coupe </td>
              <td>10 euros</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}