{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/partenaire.css') }}">
{% endblock %}
{% block body %}

	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<a class="navbar-brand" href="#">Mon site</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item active">
					<a  class="nav-link" href="">Devenir partenaire</a>
				</li>	
			</ul>
		</div>
		</nav>
		<div class="container">
			<div class="row">
				<div class="col-sm-3"></div>
				<div class="col-sm-6 register-form ">
					{{  form_start(partenaire) }}
					<legend><p class="text-muted" style="text-align: center;">A propos de vous</p></legend>
					
					{# une div cachée pour afficher l'alerte si lutilisateur existe déja #}
					<div class="alert alert-dismissible alert-danger" id="existe">
						<input type="hidden" value="{{ dejaExiste }}" id="dejaExiste">
						<strong>Oh mince !</strong> Cet Email existe déja !
					</div>

					<div class="form-group">
						{{ form_row(partenaire.email, {'attr': {'placeholder': "votre e-mail...", 'type': "email", 'class': "form-control"}})
						}}
					</div>
					<div class="form-group">
						{{ form_row(partenaire.nom, {'attr': {'placeholder': "votre Nom...", 'type': "text", 'class': "form-control"}})
						}}
					</div>
					<div class="form-group">
						{{ form_row(partenaire.prenom, {'attr': {'placeholder': "votre Prénom...", 'type': "text", 'class': "form-control"}})
						}}
					</div>
					<div class="form-group">
						{{ form_row(partenaire.telephone, {'attr': {'placeholder': "votre Numero de téléphone...", 'type': "number", 'class': "form-control"}})
						}}
					</div>
					<button type="submit" class="btn btn-outline-primary" id="btn_partenaire">Enrigestrer</button>
					{{  form_end(partenaire) }}
				</div>
				{##############################################}
			</div>
		</div>
		
	{% endblock %}
	{% block javascripts %}
		<script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/partenaire-informations.js') }}"></script>
	{% endblock %}